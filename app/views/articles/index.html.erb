<p id="notice"><%= notice %></p>

<div class='row'>
  <%= form_tag(articles_path, :method => 'get', id: 'search-form') do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Search Articles',class: 'col-lg-8' %>
      <%= submit_tag 'Search' %>
  <% end %>

  <h1>Articles</h1>
  <label  class="col-sm-2 control-label">Create new Article:</label>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
</div>
<div class='row'>
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <% @articles.each do |article| %>
      <div class="post-preview">
        <%= link_to article do %>
            <h2 class="post-title">
              <%= article.title %>
            </h2>
            <h3 class="post-subtitle">
              <%= article.description %>
            </h3>
      <% end %>
        <p class="post-meta">Posted by <a href="#"><%= article.user.email  %></a> </p>
      </div>
    <% end %>
  </div>
</div>

